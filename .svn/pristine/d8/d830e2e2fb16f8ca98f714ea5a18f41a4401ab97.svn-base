}

function detailFun(row) {
 	$('#detailModal').modal();
 	CloudUtils.setForm(row,'detailForm');
 	$('#detailForm input').attr('readonly',true);
    $("#btn_blank").removeClass('col-sm-4').addClass('col-sm-7');
}


