$(function () {
    InitTable();
});

function InitTable(){
	$('#daiban').bootstrapTable('destroy');  
	$("#daiban").bootstrapTable({  
	     method: "post", 
	     url: "../../activiti/getAgencyTaskList", 
	     striped: false,  //表格显示条纹  
	     pagination: true, //启动分页  
	     pageSize: 5,  //每页显示的记录数  
	     pageNumber:1, //当前第几页  
	     pageList: [5, 10, 15, 20, 25],  //记录数可选列表  
	     search: false,  //是否启用查询  
	     showColumns: false,  //显示下拉框勾选要显示的列  
	     showRefresh: false,  //显示刷新按钮  
	     sidePagination: "server", //表示服务端请求  
	     //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
	     //设置为limit可以获取limit, offset, search, sort, order  
	     queryParamsType : "undefined",   
	     queryParams: function queryParams(params) {   //设置查询参数  
	       var data = CloudUtils.convertStringJson('searchForm');
           var jsonData = eval("(" + data + ")");
	       var param = {    
	           pageNumber: params.pageNumber,    
	           pageSize: params.pageSize,
	           taskName:jsonData.txt_taskName,
	           procdefName:jsonData.txt_procdefName
	       };    
	       return JSON.stringify(param);                   
	     },  
	     responseHandler:function responseHandler(res) {
	    	 if (res.result==0) {
	        	 return {
	        		 "rows": res.dataList,
	        		 "total": res.records
	        	 };

	    	 } else {
	    		 alert(res.resultNote);
	    		 return {
			        	 "rows": [],
			        	 "total": 0
			        	 };
	    	 }
	     },
	     columns: [{
		        field: 'taskName',
		        title: '角色类型',
		        align: 'center',
	            valign: 'middle',
	            visible:false
		    }, {
		        field: 'procdefName',
		        title: '流程名称',
		        align: 'center',
	            valign: 'middle'
		    },{
		        field: 'procInstId',
		        title: '进程Id',
		        align: 'center',
	            valign: 'middle',
	            visible:false
		    }, {
		        field: 'taskId',
		        title: 'taskId',
		        align: 'center',
	            valign: 'middle',
	            visible:false
	            
		    }, {
		        field: 'procdefKey',
		        title: 'procdefKey',
		        align: 'center',
	            valign: 'middle',
	            visible:false
		    },{
		        field: 'taskDefKey',
		        title: '节点id',
		        align: 'center',
	            valign: 'middle',
	            visible:false
		    },{
		        field: 'preAssignee',
		        title: '上一执行人',
		        align: 'center',
	            valign: 'middle'
	            
		    },{
		        field: 'preDefKey',
		        title: '上一执行key',
		        align: 'center',
	            valign: 'middle',
	            visible:false
	            
		    },{
		        field: 'createTime',
		        title: '创建时间',
		        align: 'center',
	            valign: 'middle'
		    },{
		        title: '事项状态',
		        align: 'center',
	            valign: 'middle',
	            formatter:function(value,row,index){
	 					return "代办";
	 			}
		    },{
	 	        field: 'operation',
	 	        title: '编辑',
	 	        align: 'center',
	 	        formatter:function(value,row,index){
	 	        	var m = '<a class = "fa fa-edit mod" style="color:#d864fd;padding:0px 5px;" title="编辑" href="javascript:void(0)"></a>';
	 	        	var s = '<a class = "glyphicon glyphicon-eye-open show" style="color:green;padding:0px 5px;" title="导图" href="javascript:void(0)"></a>';
		 	        return m +" "+s;
	 	        },
	 	        events: 'operateEvents'
	 	    }]
	   });  
}

function searchFun(){
	InitTable();
}

window.operateEvents = {
		'click .mod': function (e, value, row, index) {
			if (row.procdefName == "推荐经销商") {
				$('#mainFrame',top.document).attr('src','project/dykManager/agencyReview.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
			} else if (row.procdefName == "融资管理") {
				if (row.taskDefKey == 'usertask1') {//融资再申请
					$('#mainFrame',top.document).attr('src','project/dykManager/financeAdd.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				} else if (row.taskDefKey == 'usertask2') {//登记保证金
					$('#mainFrame',top.document).attr('src','project/dykManager/regGuarantee.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				} else {//审批
					$('#mainFrame',top.document).attr('src','project/dykManager/financeReview.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
			}else if (row.procdefName == "还款申请") {
				if(row.taskDefKey == 'usertask2'){
					$('#mainFrame',top.document).attr('src','project/dykManager/repayManageTask.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
				if (row.taskDefKey == 'usertask1') {//还款再申请
					$('#mainFrame',top.document).attr('src','project/dykManager/repayReapply.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
			}else if (row.procdefKey == "payCommitment") {//付款承诺函
				if (row.taskDefKey == 'usertask1') {//付款申请
					$('#mainFrame',top.document).attr('src','project/dykManager/payCommitmentMngTask.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				} else if (row.taskDefKey == 'usertask2') {//补缴保证金
					$('#mainFrame',top.document).attr('src','project/dykManager/fillGuarantee.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				} else {
					$('#mainFrame',top.document).attr('src','project/dykManager/payCommitmentMngReapply.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
			}else if(row.procdefName == '合同管理'){
				if(row.taskDefKey=="task_contract_pm" ||row.taskDefKey=="task_contract_fw"){
					$('#mainFrame',top.document).attr('src','project/dykManager/contractManager/contractAgencyTask.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&taskDefKey='+row.taskDefKey);
				}
			}else if(row.procdefName=="企业信息管理"){
				if(row.taskDefKey=="usertask1"){
					//再申请
					$('#mainFrame',top.document).attr('src','pubManager/custManager/custReapply.html?taskId='+row.taskId+'&procInstId='+row.procInstId);
				}else if(row.taskDefKey=="usertask4"){
					//进入审核
					$('#mainFrame',top.document).attr('src','pubManager/custManager/custAgencyTask.html?taskId='+row.taskId+'&procInstId='+row.procInstId);
				}
			}else if(row.procdefName=="退还保证金"){
				if(row.taskDefKey=="usertask1"){
					//再申请
					$('#mainFrame',top.document).attr('src','project/dykManager/refundDepositReapply.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}else{
					//进入审核
					$('#mainFrame',top.document).attr('src','project/dykManager/refundDepositAgency.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
			}else if(row.procdefName=="保证金冲抵"){
				if(row.taskDefKey=="usertask1"){
					//再申请
					$('#mainFrame',top.document).attr('src','project/dykManager/offsetDepositReapply.html?taskId='+row.taskId+'&procInstId='+row.procInstId);
				}else{
					//进入审核
					$('#mainFrame',top.document).attr('src','project/dykManager/offsetDepositAgency.html?taskId='+row.taskId+'&procInstId='+row.procInstId+'&nodeId='+row.taskDefKey);
				}
			}
		},
	// 流程图形
	'click .show': function (e, value, row, index) {
		initTaskTable(row.procInstId);
		var processDefinitionId = typeof(row.processDefinitionId)=="undefined"?"":row.processDefinitionId.replace(/\:/g, '%3A');
		var processInstanceId = typeof(row.processInstanceId)=="undefined"?"":row.procInstId.replace(/\:/g, '%3A');
		var taskId = typeof(row.taskId)=="undefined"?"":row.taskId;
		
		$("#pic").attr("src", "../../activiti/graph?processDefinitionId="+processDefinitionId+
				"&processInstanceId="+processInstanceId+"&taskId="+taskId);
		$("#picModal").modal({backdrop: 'static', keyboard: false});
	},
};

