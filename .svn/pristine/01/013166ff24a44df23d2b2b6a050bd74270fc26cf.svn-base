$(document).ready(function() {
	dateload();
	initRepayTable();
});

window.operateEvents = {
	'click .detail': function (e, value, row, index) {
		detailFun(row.repaymentId);
    }
};

function detailFun(repaymentId) {
	$("#detailModal").modal({backdrop: 'static', keyboard: false});
	initCarDetailTable(repaymentId);
}

function addFun() {
	$('#mainFrame',top.document).attr('src','project/dykManager/repayReapply.html');
}

function searchFun(){
	initRepayTable();
}

function dateload(){
	 $('#repaymentDate').datetimepicker({
      language: 'zh-CN',
      autoclose: 1,
      todayBtn: true,// 显示今天时间
      pickerPosition: "bottom-left",
      minuteStep: 5,
      format: 'yyyy-mm-dd',
      minView: 'month',　　// 日期时间选择器所能够提供的最精确的时间选择视图。
      initialDate : new Date() //参考financeInfoManager.js
     });
}

function initRepayTable() { 
	$('#repayInfoList').bootstrapTable('destroy'); 
	$("#repayInfoList").bootstrapTable({  
		 method: "post", 
         url: "../../repayInfo/list", 
         striped: true,  //表格显示条纹  
         pagination: true, //启动分页  
         pageSize: 5,  //每页显示的记录数  
         pageNumber:1, //当前第几页  
         pageList: [5, 10, 15, 20, 25],  //记录数可选列表  
         search: false,  //是否启用查询  
         showColumns: false,  //显示下拉框勾选要显示的列  
         showRefresh: false,  //显示刷新按钮  
         sidePagination: "server", //表示服务端请求  
         //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
         //设置为limit可以获取limit, offset, search, sort, order  
         queryParamsType : "undefined",   
         queryParams: function queryParams(params) {   //设置查询参数  
           var param = {    
               pageNumber: params.pageNumber,
               pageSize: params.pageSize,
               repaymentDate: $("#repaymentDate").val()
           };    
           return JSON.stringify(param);
         },  
         responseHandler:function responseHandler(res) {
        	 if (res.result==0) {
	        	 return {
	        		 "rows": res.dataList,
	        		 "total": res.records
	        	 };

        	 } else {
        		 bootbox.alert(res.resultNote);
        		 return {
			        	 "rows": [],
			        	 "total": 0
			        	 };
        	 }
         },
         columns: [{
 	        field: 'repaymentId',
 	        title: '还款编号',
 	        align: 'center',
            valign: 'middle',
            visible: false
 	    }, {
 	        field: 'repaymentDate',
 	        title: '还款日期',
 	        align: 'center',
            valign: 'middle'
 	    }, {
 	        field: 'repaySumAmt',
 	        title: '还款总金额',
 	        align: 'center',
            valign: 'middle',
            formatter:function(value,row,index) {
				return $.number(value, 2);
	    	}
 	    }, {
 	        field: 'repayCapitalAmt',
 	        title: '还本金金额',
 	        align: 'center',
            valign: 'middle',
            formatter:function(value,row,index) {
				return $.number(value, 2);
	    	}
 	    },{
 	        field: 'repayInterestAmt',
 	        title: '还利息金额',
 	        align: 'center',
 	        valign: 'middle',
 	        formatter:function(value,row,index) {
				return $.number(value, 2);
	    	}
 	    },{
 	        field: 'operation',
 	        title: '赎车明细',
 	        align: 'center',
 	        valign: 'middle',
 	        formatter:function(value,row,index){
 	        	var d = '<a class = "fa fa-list-ul detail" style="color:#a9d86e;padding:0px 5px;" title="详情" href="javascript:void(0)"></a>';
 	            return d;
 	        },
 	        events: 'operateEvents'
 	    }
 	    ]
       });
}

function initCarDetailTable(repaymentId) { 
	$('#carInfoTable').bootstrapTable('destroy'); 
	$("#carInfoTable").bootstrapTable({
		 method: "post", 
         url: "../../repayInfo/carInfoList", 
         striped: false,  //表格显示条纹  
         pagination: false, //启动分页  
         search: false,  //是否启用查询  
         showColumns: false,  //显示下拉框勾选要显示的列  
         showRefresh: false,  //显示刷新按钮  
         sidePagination: "server", //表示服务端请求  
         //设置为undefined可以获取pageNumber，pageSize，searchText，sortName，sortOrder  
         //设置为limit可以获取limit, offset, search, sort, order  
         queryParamsType : "undefined",   
         queryParams: function queryParams(params) {   //设置查询参数  
           var param = {
        		repaymentId: repaymentId
           };
           return JSON.stringify(param);
         },  
         responseHandler:function responseHandler(res) {
        	 if (res.result==0) {
	        	 return {
	        		 "rows": res.dataList,
	        		 "total": res.records
	        	 };

        	 } else {
        		 bootbox.alert(res.resultNote);
        		 return {
			        	 "rows": [],
			        	 "total": 0
			        	 };
        	 }
         },
         columns: [{
 	        field: 'carFrameNum',
 	        title: '车架号',
 	        align: 'center',
            valign: 'middle'
 	    }, {
 	        field: 'carActualPrice',
 	        title: '实际提车价(元)',
 	        align: 'center',
            valign: 'middle',
            formatter:function(value,row,index) {
				return $.number(value, 2);
	    	}
 	    }, {
 	        field: 'financeId',
 	        title: '融资编号',
 	        align: 'center',
            valign: 'middle'
 	    }, {
 	        field: 'financeStartDate',
 	        title: '融资起始日',
 	       align: 'center',
           valign: 'middle'
 	    },{
 	        field: 'financeEndDate',
 	        title: '融资到期日',
 	        align: 'center',
 	        valign: 'middle'
 	    }]
       });
}