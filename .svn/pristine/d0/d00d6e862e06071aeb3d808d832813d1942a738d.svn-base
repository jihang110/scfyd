//同意获取拒绝时的提示
function checkAdvice(type){
	$("#advice").unbind("keyup");//解除绑点
	if(type=="1"){
		$("#btn_save").attr("disabled",true);
		$("#checkAdvice").show();
		changeAdvice(type);
	}else{
		$("#btn_save").attr("disabled",false);
		$("#checkAdvice").hide();
	}
}

function changeAdvice(type){
		$("#advice").keyup(function(){
			if($.trim($("#advice").val())){
				$("#checkAdvice").hide();
				$("#btn_save").attr("disabled",false);
			}else{
				$("#btn_save").attr("disabled",true);
				$("#checkAdvice").show();
			}
		});
}

